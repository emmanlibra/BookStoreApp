<?xml version="1.0" encoding="UTF-8"?>
<!-- <web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0"> -->
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
  <display-name>BookstoreApplication</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>GetAccountListFromDataBaseServlet</servlet-name>
    <servlet-class>com.mapua.lab.controller.GetAccountListFromDataBaseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetAccountListFromDataBaseServlet</servlet-name>
    <url-pattern>/account_list.jsp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetBookInventoryFromDataBaseServlet</servlet-name>
    <servlet-class>com.mapua.lab.controller.GetBookInventoryFromDataBaseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetBookInventoryFromDataBaseServlet</servlet-name>
    <url-pattern>/book_list.jsp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoadAccountDetailsServlet</servlet-name>
    <servlet-class>com.mapua.lab.controller.LoadAccountDetailsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoadAccountDetailsServlet</servlet-name>
    <url-pattern>/load_account_details.jsp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoadBookDataServlet</servlet-name>
    <servlet-class>com.mapua.lab.controller.LoadBookDataServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoadBookDataServlet</servlet-name>
    <url-pattern>/load_book_data.jsp</url-pattern>
  </servlet-mapping>
</web-app>